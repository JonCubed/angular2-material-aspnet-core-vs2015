        "./button/button-demo.ts",
        "./icon/icon-demo.ts",
        "./sidenav/sidenav-demo.ts",
        "./toolbar/toolbar-demo.ts",
        "../typings/main.d.ts"
    ],
    "exclude": [
        "../node_modules",
        "../typings/main"
    ]
}

